                                                     VerticalOptions="Center">
                                <Label Text="{Binding Name}"
                                       FontSize="20"
                                       />
                                <Label Text="{Binding Position}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Grid>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
